<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/photoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="15dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:src="@mipmap/uikit_ic_menu_back_white_circle" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_delete"
            style="@style/UikitButton"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="#99000000"
            android:drawableLeft="@mipmap/uikit_icon_keyboard_delete"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="删除"
            android:textColor="@color/base_image_cropper_text"
            android:textSize="@dimen/textFontSize_16" />

    </LinearLayout>

</RelativeLayout>
