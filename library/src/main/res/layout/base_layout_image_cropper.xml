<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/i_source"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.hm.iou.base.photo.OverlayView
        android:id="@+id/v_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/v_fit"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#FF727272" />

        <LinearLayout
            android:id="@+id/linearLayout_bottom"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cutCancer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ff000000"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/base_image_cropper_text"
                android:textSize="@dimen/textFontSize_16" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ff000000" />

            <TextView
                android:id="@+id/btn_cutFinish"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ff000000"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/base_image_cropper_text"
                android:textSize="@dimen/textFontSize_16" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>