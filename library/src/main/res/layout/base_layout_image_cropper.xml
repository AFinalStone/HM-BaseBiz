<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/i_source"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.hm.iou.base.photo.OverlayView
        android:id="@+id/v_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/v_fit"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <LinearLayout
            android:id="@+id/linearLayout_bottom"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#B0000000"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_cutCancer"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:scaleType="center"
                android:src="@mipmap/uikit_icon_close_white_01" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/btn_cutFinish"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/textFontSize_16" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>